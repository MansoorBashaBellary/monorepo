{
  "name": "@mansoorbashabellary/monorepo",
  "version": "1.0.44",
  "license": "UNLICENSED",
  "workspaces": [
    "src/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "NODE_ENV=production VUE_APP_BUILD_TARGET=js-components vue-cli-service build --no-clean && lerna run --parallel build",
    "clean": "lerna clean --yes;rm -rf node_modules",
    "lint": "vue-cli-service lint",
    "prepublishOnly": "node ./remove-private-field.js",
    "postpublish": "node ./add-private-field.js",
    "release:pre": "lerna-semantic-release pre",
    "release:post": "lerna-semantic-release post",
    "release:perform": "lerna-semantic-release perform",
    "release": "npm run release:pre && npm run release:post && npm run release:perform"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:MansoorBashaBellary/monorepo.git"
  },
  "author": "Mansoor Basha Bellary",
  "bugs": {
    "url": "https://github.com/MansoorBashaBellary/monorepo/issues"
  },
  "gitHooks": {
    "pre-commit": "lint-staged && yarn build",
    "commit-msg": "commitlint -e $GIT_PARAMS"
  },
  "dependencies": {
    "core-js": "^2.6.5",
    "vue": "^2.6.10"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "devDependencies": {
    "commitizen": "^2.9.6",
    "cz-lerna-changelog": "^1.2.1",
    "lerna-semantic-release": "^9.1.0",
    "@vue/cli-plugin-babel": "^3.8.0",
    "@vue/cli-plugin-eslint": "^3.8.0",
    "@vue/cli-service": "^3.8.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "lerna": "^3.14.1",
    "lint-staged": "^8.0.4",
    "lodash": "^4.17.5",
    "vue-template-compiler": "^2.6.10"
  },
  "description": "## Project setup ``` yarn install ```",
  "homepage": "https://github.com/MansoorBashaBellary/monorepo#readme",
  "private": true
}