{
  "name": "@mansoorbashabellary/tabs",
  "version": "1.0.9",
  "license": "UNLICENSED",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "NODE_ENV=production VUE_APP_BUILD_TARGET=js-components vue-cli-service build --no-clean",
    "lint": "vue-cli-service lint",
    "changelog": "yarn conventional-changelog -p angular -i ./../../CHANGELOG.md -s",
    "version:recommend": "conventional-recommended-bump -p angular",
    "postversion": "git push && git push --tags && conventional-github-releaser -p angular"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:MansoorBashaBellary/monorepo.git",
    "directory": "src/tabs"
  },
  "author": "Mansoor Basha Bellary",
  "homepage": "https://github.com/MansoorBashaBellary/monorepo#readme",
  "bugs": {
    "url": "https://github.com/MansoorBashaBellary/monorepo/issues"
  },
  "dependencies": {
    "core-js": "^2.6.5",
    "vue": "^2.6.10"
  },
  "gitHooks": {
    "pre-commit": "lint-staged && yarn build",
    "commit-msg": "commitlint -e $GIT_PARAMS"
  },
  "lint-staged": {
    "linters": {
      "**/*.js": [
        "prettier --write",
        "eslint --no-ignore",
        "git add"
      ],
      "**/*.{scss,sass}": [
        "sass-lint -v"
      ]
    },
    "ignore": [
      "src/js-lib/vendor/**"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-angular": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "@vue/cli-plugin-babel": "^3.8.0",
    "@vue/cli-plugin-eslint": "^3.8.0",
    "@vue/cli-service": "^3.8.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "commitizen": "^3.0.4",
    "conventional-changelog-cli": "^1.3.21",
    "conventional-github-releaser": "^3.1.2",
    "conventional-recommended-bump": "^4.0.4",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "lerna": "^3.14.1",
    "lint-staged": "^8.0.4",
    "lodash": "^4.17.5",
    "vue-template-compiler": "^2.6.10"
  }
}
